<!DOCTYPE html>
<html>
<head>
  <title>Current Status - <%= verticalName %></title> <!-- Page title with dynamic vertical name -->
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <header>
    <h1><%= headerText %></h1> <!-- Dynamic header text -->
    <nav>
      <ul>
        <li><a href="/"><%= homeText %></a></li> <!-- Dynamic Home button text -->
        <li><a href="/order"><%= initiateOrderText %></a></li> <!-- Dynamic Order link -->
        <li><a href="/verify"><%= verifyText %></a></li> <!-- Dynamic Verify link -->
        <li><a href="/verify-payment"><%= verifyPaymentText %></a></li> <!-- Dynamic Verify Payment link -->
      </ul>
    </nav>
  </header>
  <main>
    <h2><%= detailsTitle %></h2> <!-- Dynamic title based on vertical -->
    <p><%= productLabel %>: <%= productInfo.productName %></p> <!-- Dynamic product label -->

    <% if (productInfo.serialNumber) { %> <!-- Conditionally render serial number if present -->
      <p><%= serialLabel %>: <%= productInfo.serialNumber %></p>
    <% } %>

    <p><%= statusLabel %>: <%= productInfo.Status %></p> <!-- Dynamic status label for order or booking -->
    <p><%= amountLabel %>: <%= productInfo.totalAmount %></p> <!-- Dynamic amount label -->
  </main>
  <footer>
    <p><%- footerText %></p>
  </footer>
</body>
</html>